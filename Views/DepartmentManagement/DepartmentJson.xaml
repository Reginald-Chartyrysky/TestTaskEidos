<Window x:Class="TestTaskForEidos.Views.DepartmentManagement.DepartmentJson"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestTaskForEidos.Views.DepartmentManagement"
        mc:Ignorable="d"
        Title="DepartmentJson" Height="160" Width="228" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">
    <Grid>
        <StackPanel Margin="5" VerticalAlignment="Center">

            <TextBlock Text="Название сохраняемого файла" ></TextBlock>
            <TextBox Text="{Binding ToSaveFileName, Mode=TwoWay}" Width="156" Height="29">

            </TextBox>
            <Button Command="{Binding SaveListCommand}" Content="Save Current Departments"  Height="29" Width="156"/>
            <Button Command="{Binding LoadListCommand}" Content="Load Departments"  Height="29" Width="156"/>
        </StackPanel>
    </Grid>
</Window>
