<Window x:Class="TestTaskForEidos.Views.DepartmentManagement.OfficeRedactor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestTaskForEidos.Views.DepartmentManagement"
        mc:Ignorable="d"
        Title="OfficeRedactor" Height="113" Width="174"  WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">
    <Grid>
        <StackPanel VerticalAlignment="Center" Margin="5">

            <TextBlock Text="Номер офиса"  Width="120"></TextBlock>
            <TextBox VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding Path=Office, Mode=TwoWay}" TextWrapping="Wrap" Width="120"/>
        </StackPanel>
    </Grid>
</Window>
